extends layout

block content
  .blog-masthead
    .container-fluid
      h2 Hanging around Barrie
      nav.blog-nav
        a.blog-nav-item.active(href='#') Home
        a.blog-nav-item(href='/about.html', title='About me') About me
        a.blog-nav-item(href='http://slides.com/marcomaffei/hanging-around-barrie#/') Developing and goals
        a.blog-nav-item(href='#signIn') Sign in
        a.blog-nav-item(href='#admin') Admin
        img(src="/images/logo.svg" width='70', height='60')
  .jumbotron
    .container-fluid
        ul.nav.navbar-nav
          li.active
            a(href='#') Events
          li
            a(href='#') Clubs
          li
            a(href='#') Deals of the week
          li
            a(href='#') Review
    div(id='map-canvas')
  .container-fluid
    .row      
      .col-md-8
        h2 Offers and specials
        .table-responsive
          table.table.table-striped
            thead
                th Logo
                th Venue
                th Day
                th Price
                th Description
                th Rating
                th Type
                th Edit
                th Delete
            tbody
              each product, i in products
                  tr
                    td 
                     img(src='./uploads/#{product.uploadFilename}')
                    td #{product.venue}
                    td #{product.day}
                    td #{product.price}
                    td #{product.description}
                    td #{product.rating}
                    td #{product.type}
                    td 
                        a(href='products/edit/#{product._id}' title='Edit') Edit
                    td 
                        a(href='products/delete/#{product._id}' title='Delete' onclick='return confirm(\'Are you sure you want to delete this product?\');') Delete
          a(href='/products/add', title='Add Product', class="navbar-brand") Add Offers 
      .col-md-4
        form(action='/products/req', method='post')
          .form-group
            label(for='day')
              | Day
              select(name='day')
                  option(value='Everyday') Everyday
                  option(value='Monday') Monday
                  option(value='Tuesday') Tuesday
                  option(value='Wednesday') Wednesday
                  option(value='Thursday') Thursday
                  option(value='Friday') Friday
                  option(value='Saturday', selected='') Saturday
                  option(value='Sunday') Sunday
          .form-group
            label(for='type')
              | Type
              select(name='feature')
                option(value='All') All
                option(value='Beer', selected='') Beer
                option(value='Wine') Drink
                option(value='Food') Food
          .form-group
            label(for='rating')
              | Rating
              select(name='Sort')
                option(value='1', selected='') 1 star
                option(value='2') 2 starts
                option(value='3') 3 stars
                option(value='4') 4 stars
                option(value='5') 5 stars
          .form-group
            input.button(type='submit', value='Search')
  include footer