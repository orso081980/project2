extends layout

block content

    nav.navbar.navbar-inverse.navbar-fixed-top
        .navbar-header
          a.navbar-brand(href='#') Hanging around Barrie
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/about.html', title='About me') About me
            li
              a(href='#developing') Developing and goals
            li
              a(href='#signIn') Sign in
            li
              a(href='#admin') Admin
      .jumbotron
        .container
          ul.nav.nav-pills
            li.active(role='presentation')
              a(href='/') Events
            li(role='presentation')
              a(href='/') Clubs
            li(role='presentation')
              a(href='/') Deals of the week
            li(role='presentation')
              a(href='/') Review
        div(id='map-canvas')
      .col-md-4
        .collapse.navbar-collapse
          a(href='/products/add', title='Add Product') Add Product     
        h2 Offers and specials
        table.table
          thead
              th Venue
              th Day
              th Price
              th Descrition
              th Rating
              th Type
              th Edit
              th Delete
          tbody
            each product, i in products
                tr
                    td #{product.venue}
                    td #{product.day}
                    td #{product.price}
                    td #{product.description}
                    td #{product.rating}
                    td #{product.type}
                    td 
                        a(href='products/edit/#{product._id}' title='Edit') Edit
                    td 
                        a(href='products/delete/#{product._id}' title='Delete' onclick='return confirm(\'Are you sure you want to delete this product?\');') Delete