extends layout

block content
    div(class='container')
        div(class='collapse navbar-collapse')
            a(href='/products', title='List Products') List Products
        h2 Edit Product
        form(method='post', action='/products/edit/#{product._id}')
            div(class='col-lg-8 col-lg offset-2')
                div(class='row control-group')
                    label File Upload
                    input(name='upload', type="file", required, placeholder='upload', value='#{product.uploadFilename}')
                div(class='row control-group')
                    label Venue
                    input(name='venue', required, placeholder='venue', value='#{product.venue}')
                div(class='row control-group')
                    label Day
                    select(name='selectpick', required, placeholder='day')
                        option(value='sunday') Sunday
                        option(value='monday') Monday
                        option(value='tuesday') Tuesday
                        option(value='wednesday') Wednesday
                        option(value='thursday') Thursday
                        option(value='friday') Friday
                        option(value='saturnday') Saturnday
                        option(value='everyday') Everyday
                div(class='row control-group')
                    label Price
                    input(name='price', required, placeholder='price', type='number' value='#{product.price}')
                div(class='row control-group')
                    label Description
                    textarea(name='description', required, placeholder='description', value='#{product.description}')
                div(class='row control-group')
                    label Rating
                    input(name='rating', required, placeholder='rating', type='number', value='#{product.venue}')
                div(class='row control-group')
                    label type
                    input(name='type', required, placeholder='type', value='#{product.venue}')
                input(type='hidden', name='id' value='#{product._id}')
                input(type='submit', value='Update Product')